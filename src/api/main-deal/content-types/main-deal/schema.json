{
  "kind": "singleType",
  "collectionName": "main_deals",
  "info": {
    "singularName": "main-deal",
    "pluralName": "main-deals",
    "displayName": "Main Deal",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": false
    },
    "content-type-builder": {
      "visible": false
    }
  },
  "attributes": {
    "selectAllText": {
      "type": "string",
      "default": "All",
      "required": true
    },
    "customizedText": {
      "type": "string",
      "default": "Customized",
      "required": true
    },
    "searchButton": {
      "type": "component",
      "repeatable": false,
      "component": "elements.button",
      "required": true
    },
    "deals": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::deal.deal"
    },
    "dealsBanner": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    },
    "metaData": {
      "type": "component",
      "repeatable": false,
      "component": "meta-data.meta-data"
    },
    "campaignSection": {
      "type": "component",
      "repeatable": false,
      "component": "main-deals.campaign-section"
    }
  }
}
