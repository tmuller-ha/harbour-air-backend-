{
  "kind": "collectionType",
  "collectionName": "deals",
  "info": {
    "singularName": "deal",
    "pluralName": "deals",
    "displayName": "Deal",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "dealImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "fare": {
      "type": "string",
      "required": true
    },
    "origin": {
      "type": "string",
      "required": true
    },
    "destination": {
      "type": "string",
      "required": true
    },
    "bookNowButton": {
      "type": "component",
      "repeatable": false,
      "component": "elements.button",
      "required": true
    },
    "route": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "string",
      "required": true
    },
    "summary": {
      "type": "blocks",
      "required": true
    },
    "active": {
      "type": "boolean"
    },
    "countryID": {
      "type": "string",
      "required": true
    },
    "travelType": {
      "type": "string",
      "default": "one-way",
      "required": true
    },
    "fareText": {
      "type": "string",
      "default": "Starting from",
      "required": true
    }
  }
}
