{
  "kind": "collectionType",
  "collectionName": "deals",
  "info": {
    "singularName": "deal",
    "pluralName": "deals",
    "displayName": "Deal",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "dealImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "fare": {
      "type": "string",
      "required": true
    },
    "origin": {
      "type": "string",
      "required": true
    },
    "destination": {
      "type": "string",
      "required": true
    },
    "bookNowButton": {
      "type": "component",
      "repeatable": false,
      "component": "elements.button",
      "required": true
    },
    "route": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "string",
      "required": true
    },
    "summary": {
      "type": "blocks",
      "required": true
    },
    "active": {
      "type": "boolean"
    },
    "fareText": {
      "type": "string",
      "default": "One Way fares from",
      "required": true
    },
    "departureLocation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::destination.destination",
      "inversedBy": "dealsDeparture"
    },
    "arrivalLocation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::destination.destination",
      "inversedBy": "dealsArrivals"
    },
    "travelStartDate": {
      "type": "date",
      "required": true
    },
    "travelEndDate": {
      "type": "date",
      "required": true
    }
  }
}
